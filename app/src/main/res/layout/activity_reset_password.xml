<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gradient_blue"
        tools:context=".ui.reset_password.ResetPasswordActivity">


    <TextView
            android:text="@string/tv.label.resetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fira_sans_light"
            android:textColor="@android:color/white"
            android:textSize="22dp"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/btn_back"
            android:id="@+id/btnResetPasswordBack"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toBottomOf="@+id/textView3" app:layout_constraintTop_toTopOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

    <android.support.v7.widget.CardView android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
                                        app:layout_constraintTop_toTopOf="@+id/guideline3"
                                        android:background="@android:color/white"
                                        app:cardCornerRadius="10dp"
                                        android:layout_marginBottom="8dp"
                                        app:layout_constraintBottom_toTopOf="@+id/guideline4"
                                        android:layout_width="match_parent" android:id="@+id/cardViewResetPassword"
                                        android:layout_height="wrap_content" app:layout_constraintVertical_bias="0.0">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >

            <Button
                    android:text="@string/btn.label.reset"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:id="@+id/btnResetPassword" android:layout_marginTop="24dp"
                    android:fontFamily="@font/fira_sans_regular"
                    android:background="@drawable/btn_bg_blue"
                    android:textColor="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@+id/txtResetPWEmail"
                    app:layout_constraintStart_toStartOf="@+id/txtResetPWEmail"
                    app:layout_constraintEnd_toEndOf="@+id/txtResetPWEmail" android:layout_marginBottom="24dp"
                    app:layout_constraintBottom_toBottomOf="parent"/>


            <com.azio.scholiki.util.CustomTextInputLayout
                    android:id="@+id/txtResetPWEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="32dp"
                    app:errorTextAppearance="@style/ErrorAppearance"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                <EditText
                        android:id="@+id/edtResetPWEmail"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/colorPrimary"
                        android:ems="10"
                        android:fontFamily="@font/fira_sans_regular"
                        android:hint="@string/edt_hint_email"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorGrayMedium"
                        android:textSize="15dp"
                        android:paddingRight="10dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" android:layout_marginTop="24dp"/>

            </com.azio.scholiki.util.CustomTextInputLayout>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline3"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                          android:id="@+id/guideline4"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent="0.71"/>
</android.support.constraint.ConstraintLayout>